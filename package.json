{
  "name": "express-react-skeleton",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "nodemonConfig": {
    "ignore": [
      "node_modules**",
      ".build/**",
      "src/client/**"
    ]
  },
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx",
    "lint-fix": "eslint . --ext .js --fix",
    "build-server": "rimraf .build/ && babel ./src/server --out-dir .build/server/ --copy-files",
    "build-client": "webpack --mode production",
    "build": "npm run build-server && npm run build-client",
    "start-build": "NODE_ENV=localhost APP_MOCKS=0 node ./.build/server/app",
    "start-server": "SERVICE_HOST=0.0.0.0:3001 NODE_ENV=localhost APP_MOCKS=0 APP_MODE_DEV=1 nodemon --exec babel-node src/server/app",
    "start-client": "webpack-dev-server --mode development",
    "start": "node start.js"
  },
  "dependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "body-parser": "^1.18.3",
    "connected-react-router": "^5.0.1",
    "express": "^4.16.4",
    "express-winston": "^3.0.1",
    "handlebars": "^4.0.12",
    "history": "^4.7.2",
    "http-proxy-middleware": "^0.19.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-redux": "^5.1.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "redux-devtools": "^3.4.2",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "typescript": "^3.2.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
